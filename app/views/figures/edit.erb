<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <label for="figure[name]">Enter Figure Name:</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>">

    <p>Titles:</p>
    <% Title.all.each do |title|%>
        <br>
        <label for="<%= title.id %>"><%= title.name %></label>
        <% if @figure.titles.include?(title) %>
            <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" checked="checked" value="<%= title.id %>">
        <% else %>
            <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>">
        <% end %>
    <% end %>
    <br>
    <label for="title[name]">Create new title</label>
    <input type="text" id="new_title" name="title[name]">

    <br>

    <p>Landmarks:</p>
    <% Landmark.all.each do |landmark| %>
        <br>
        <label for="<%= landmark.id %>"><%= landmark.name %></label>
        <% if @figure.landmarks.include?(landmark) %>
            <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" checked="checked" value="<%= landmark.id %>">
        <% else %>
            <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>">
        <% end %>
    <% end %>
    <br>
    <label for="landmark[name]">Enter new landmark name</label>
    <input type="text" id="new_landmark" name="landmark[name]">
    <label for="landmark[year_completed]">Enter new landmark year</label>
    <input type="text" name="landmark[year_completed]">
    <br>
    <br>
    <input type="submit" value="Edit Figure">
</form>