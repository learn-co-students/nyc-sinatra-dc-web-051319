    <a class="button" href="/">Home</a>
    <br>
    <a class="button" href="/figures/new">Create a new Figure</a>
    <br>
    <br>
    <% Figure.all.each do |figure| %>
        <h3><a href="/figures/<%= figure.id %>"><%= figure.name %></a></h3>
    <% end %>
</body>
</html>