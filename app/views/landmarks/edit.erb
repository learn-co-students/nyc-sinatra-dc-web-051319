<h2>Edit Historical Landmark</h2>

<!-- add content here -->

<form action="/landmarks/<%= @landmark.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <label for="landmark[name]">Landmark Name:</label>
    <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name">
    <br>
    <label for="landmark[year_completed]">Landmark Completed:</label>
    <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed">
    <br>
    <input type="submit" name="submit" value="UPDATE" id="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
